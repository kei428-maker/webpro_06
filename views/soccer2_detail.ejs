<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の詳細</h2>
  <table>
    <tr><th>項目</th><th>データ</th></tr>
    <tr><td>ID</td><td><%= data.id %></td></tr>
    <tr><td>名前</td><td><%= data.name %></td></tr>
    <tr><td>ポジション</td><td><%= data.position %></td></tr>
    <tr><td>所属チーム</td><td><%= data.team %></td></tr>
    <tr><td>背番号</td><td><%= data.backnumber %></td></tr>
  </table>
  <a href="/soccer2/edit/<%= data.id - 1 %>">編集</a>
  <a href="/soccer2">スタメン一覧に戻る</a>
  <a href="/soccer2/delete/<%= data.id - 1 %>">削除</a>
</body>
</html>