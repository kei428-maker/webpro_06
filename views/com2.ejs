<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>コムドット</title>
</head>
<body>
  <h2>コムドットメンバーの詳細</h2>
  <table>
    <tr><th>ID</th><th>名前</th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr><td><%= row.id %></td>
        <td><a href="/com2/<%= number %>"><%= row.name %></a></td></tr>
        <% number += 1 %>
      <% } %>
  </table>
  <a href="/com2/create">追加</a>
</body>
</html>