<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の編集</h2>
  <form action="/soccer2/update/<%= data.id - 1 %>" method="POST">
    <table>
      <tr><th>項目</th><th>データ</th></tr>
      <tr><td>ID</td><td><input type="text" name="id" value="<%= data.id %>"></td></tr>
      <tr><td>名前</td><td><input type="text" name="name" value="<%= data.name %>"></td></tr>
      <tr><td>ポジション</td><td><input type="text" name="position" value="<%= data.position %>"></td></tr>
      <tr><td>所属チーム</td><td><input type="text" name="team" value="<%= data.team %>"></td></tr>
      <tr><td>背番号</td><td><input type="text" name="backnumber" value="<%= data.backnumber %>"></td></tr>
    </table>
    <input type="submit" values="登録">
  </form>
  <a href="/soccer2/">スタメン一覧に戻る</a>
</body>
</html>